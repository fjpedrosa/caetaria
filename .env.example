# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="WhatsApp Cloud API Platform"
NEXT_PUBLIC_APP_DESCRIPTION="Enterprise WhatsApp Business API Solution"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# WhatsApp Business API (Replace with your credentials)
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCESS_TOKEN=your_access_token
WHATSAPP_BUSINESS_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Database (Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_cloud
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_32_character_secret_here
JWT_SECRET=generate_another_secret_here

# Email Service (SendGrid/Resend)
EMAIL_FROM=noreply@whatsapp-cloud-api.com
EMAIL_SERVICE=resend
RESEND_API_KEY=your_resend_api_key

# Payment Processing (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_org
SENTRY_PROJECT=your_project

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your_redis_token