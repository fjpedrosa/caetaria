# Environment Configuration Template
# Copy this file to .env.local for local development

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Local Development (use when running supabase locally)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0

# Remote Development/Staging (replace with your actual values)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Server-side only keys (never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_PROJECT_ID=your_project_id_here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Local Database URL (when using Supabase local)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Remote Database URL (for direct connections)
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ==============================================
# AUTHENTICATION CONFIGURATION
# ==============================================
# JWT Secret for local development
SUPABASE_JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# NextAuth.js (if using)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password

# ==============================================
# ANALYTICS & MONITORING
# ==============================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=your_org
SENTRY_PROJECT=your_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Vercel
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# GitHub Actions
GITHUB_TOKEN=your_github_token_here

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable features
FEATURE_ANALYTICS=true
FEATURE_A_B_TESTING=true
FEATURE_REALTIME=true
FEATURE_FILE_UPLOADS=true
FEATURE_NOTIFICATIONS=true

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Redis (for caching, if using)
REDIS_URL=redis://localhost:6379

# Image Optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Debug modes
DEBUG=false
VERBOSE_LOGGING=false

# Development tools
STORYBOOK_PORT=6006
PLAYWRIGHT_BROWSERS_PATH=./playwright-browsers

# Memory optimization (for development)
NODE_OPTIONS=--max-old-space-size=8192 --max-semi-space-size=128

# ==============================================
# TESTING CONFIGURATION
# ==============================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres_test

# Test API Keys (use test/sandbox keys)
TEST_WHATSAPP_ACCESS_TOKEN=test_token_here
TEST_STRIPE_SECRET_KEY=sk_test_your_test_key_here

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================

# Company Information
COMPANY_NAME="Caetaria"
COMPANY_EMAIL=support@caetaria.com
COMPANY_PHONE=+1234567890
COMPANY_ADDRESS="Your Company Address"

# Pricing Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD

# ==============================================
# REGIONAL CONFIGURATION
# ==============================================

# Localization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,pt

# Timezone
DEFAULT_TIMEZONE=UTC

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# AWS S3 (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-backup-bucket

# ==============================================
# WEBHOOK CONFIGURATION
# ==============================================

# External webhook endpoints
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# ==============================================
# AI/ML CONFIGURATION
# ==============================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id

# Other AI Providers
ANTHROPIC_API_KEY=your_anthropic_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key