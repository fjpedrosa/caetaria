# ===============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===============================================================================
# WARNING: This is a production environment template
# All values must be replaced with actual production secrets
# Never commit actual production values to version control
# ===============================================================================

# ==============================================
# CORE ENVIRONMENT CONFIGURATION
# ==============================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
SKIP_ENV_VALIDATION=false

# Production build optimization
NODE_OPTIONS=--max-old-space-size=8192 --optimize-for-size

# ==============================================
# SUPABASE PRODUCTION CONFIGURATION
# ==============================================
# Replace with your actual production Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key_here

# Server-side keys (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here
SUPABASE_PROJECT_ID=your_production_project_id_here
SUPABASE_JWT_SECRET=your_production_jwt_secret_here

# Database connection (for migrations and admin tasks)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# Strong production secrets - generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_very_secure_production_nextauth_secret_here
NEXTAUTH_URL=https://your-production-domain.com

# Webhook verification tokens - generate with: openssl rand -hex 32
WEBHOOK_SECRET=your_production_webhook_secret_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_production_whatsapp_webhook_token_here

# Encryption key for sensitive data - generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_character_production_encryption_key

# ==============================================
# WHATSAPP CLOUD API PRODUCTION
# ==============================================
WHATSAPP_ACCESS_TOKEN=your_production_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_production_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_production_business_account_id

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Sentry - Error tracking and performance monitoring
SENTRY_DSN=https://your_production_sentry_dsn_here
SENTRY_ORG=your_organization_name
SENTRY_PROJECT=your_project_name
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# PostHog - Product analytics
NEXT_PUBLIC_POSTHOG_KEY=your_production_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_production_vercel_analytics_id

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# ==============================================
# EMAIL & NOTIFICATIONS
# ==============================================
# Production SMTP configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_production_email@your-domain.com
SMTP_PASS=your_production_email_password

# Alert notifications
ALERT_EMAIL=alerts@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/production/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/production/webhook

# ==============================================
# DOMAIN & SSL CONFIGURATION
# ==============================================
PRODUCTION_DOMAIN=your-production-domain.com
WWW_REDIRECT=true
FORCE_HTTPS=true

# CORS configuration for production
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# ==============================================
# RATE LIMITING & SECURITY
# ==============================================
# Production rate limits (more restrictive)
RATE_LIMIT_MAX=50
RATE_LIMIT_WINDOW=900000

# API rate limiting
API_RATE_LIMIT_MAX=1000
API_RATE_LIMIT_WINDOW=3600000

# Security headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_SECURITY_HEADERS=true

# ==============================================
# CACHING & CDN CONFIGURATION
# ==============================================
# Redis for production caching
REDIS_URL=redis://your-production-redis-url:6379
REDIS_TLS=true

# CDN configuration
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Image optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_production_cloudinary_name
CLOUDINARY_API_KEY=your_production_cloudinary_key
CLOUDINARY_API_SECRET=your_production_cloudinary_secret

# ==============================================
# DATABASE OPTIMIZATION
# ==============================================
# Connection pooling
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=10000

# Query optimization
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD=1000

# ==============================================
# BACKUP & DISASTER RECOVERY
# ==============================================
# AWS S3 for backups
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BACKUP_BUCKET=your-production-backup-bucket

# Backup configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
ENABLE_AUTOMATED_BACKUPS=true

# ==============================================
# LOGGING & DEBUGGING
# ==============================================
# Production logging (minimal)
LOG_LEVEL=warn
VERBOSE_LOGGING=false
DEBUG=false

# Request logging
LOG_REQUESTS=true
LOG_RESPONSES=false

# ==============================================
# FEATURE FLAGS PRODUCTION
# ==============================================
FEATURE_ANALYTICS=true
FEATURE_A_B_TESTING=true
FEATURE_REALTIME=true
FEATURE_FILE_UPLOADS=true
FEATURE_NOTIFICATIONS=true
FEATURE_MAINTENANCE_MODE=false

# ==============================================
# PERFORMANCE OPTIMIZATION
# ==============================================
# Bundle optimization
ENABLE_BUNDLE_ANALYZER=false
ENABLE_WEBPACK_ANALYZER=false

# Memory optimization
MEMORY_LIMIT=8192
GC_OPTIMIZATION=true

# Cache optimization
ENABLE_REDIS_CACHE=true
CACHE_TTL=3600
STATIC_CACHE_MAX_AGE=31536000

# ==============================================
# COMPLIANCE & GDPR
# ==============================================
ENABLE_GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365

# Privacy configuration
ENABLE_USER_DATA_EXPORT=true
ENABLE_USER_DATA_DELETION=true
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_BRANCH=main
DEPLOYMENT_REGION=us-east-1

# Health checks
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=30

# Rollback configuration
ENABLE_ROLLBACK=true
ROLLBACK_TIMEOUT=600

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================
# Payment processing (if applicable)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AI/ML Services
OPENAI_API_KEY=your_production_openai_key
OPENAI_ORG_ID=your_production_openai_org

# ==============================================
# MONITORING ENDPOINTS
# ==============================================
HEALTH_CHECK_URL=https://your-domain.com/api/health
STATUS_PAGE_URL=https://status.your-domain.com
METRICS_ENDPOINT=https://your-domain.com/api/metrics

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================
COMPANY_NAME="Caetaria"
COMPANY_EMAIL=support@your-domain.com
SUPPORT_EMAIL=support@your-domain.com
SECURITY_EMAIL=security@your-domain.com

# Business metrics
CONVERSION_TRACKING=true
REVENUE_TRACKING=true

# ==============================================
# INFRASTRUCTURE METADATA
# ==============================================
INFRASTRUCTURE_PROVIDER=vercel
INFRASTRUCTURE_REGION=us-east-1
INFRASTRUCTURE_ENVIRONMENT=production

# Container configuration (if using)
CONTAINER_MEMORY_LIMIT=1024
CONTAINER_CPU_LIMIT=1000

# ===============================================================================
# PRODUCTION SECRETS CHECKLIST
# ===============================================================================
# [ ] All placeholder values replaced with actual production values
# [ ] All secrets generated with cryptographically secure methods
# [ ] Database credentials are production-ready
# [ ] API keys are production/live keys (not test/sandbox)
# [ ] Webhook URLs point to production endpoints
# [ ] Email configuration tested and working
# [ ] Monitoring services configured and receiving data
# [ ] Backup procedures tested and validated
# [ ] Security headers and CSP policies configured
# [ ] Rate limiting appropriate for production load
# [ ] All third-party integrations use production credentials
# ===============================================================================